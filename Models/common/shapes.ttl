ro_str:Ondergrond_ondergrondtype
  rdf:type sh:PropertyShape ;
  sh:path ro:ondergrondtype ;
  sh:minCount 1 ;
  sh:maxCount 1 ;
.

ro_str:ondergrond_datum
  rdf:type sh:PropertyShape ;
  sh:path ro:datum ;
  sh:minCount 1 ;
  sh:maxCount 1 ;
.

