# include a shape for geometrie?  all is now in the specific shapes. Can probably extract some common parts.


ro_str:Idealisatie_1 rdf:type sh:NodeShape ;
  sh:in (
    ro:exact # perhaps skos:concepts suit better.
  ) ;
  ### kkg ###
  uml:stereotype kkg:Enumeratie ;
  rdfs:label "Idealisatie_1" ;
.

ro_str:Idealisatie_2 rdf:type sh:NodeShape ;
  sh:in (
    ro:exact # perhaps skos:concepts suit better.
    ro:indicatief
  ) ;
  ### kkg ###
  uml:stereotype kkg:Enumeratie ;
  rdfs:label "Idealisatie_2" ;
.

ro_str:Idealisatie_3 rdf:type sh:NodeShape ;
  sh:in (
    ro:exact # perhaps skos:concepts suit better.
    ro:indicatief
    ro:cartografischFiguur
  ) ;
  ### kkg ###
  uml:stereotype kkg:Enumeratie ;
  rdfs:label "Idealisatie_3" ;
.

#################################################################
#   GML Geometry unions
#################################################################

ro_str:PuntLijnVlak a sh:NodeShape ;
  sh:xone (
    ro_str:Point
    ro_str:Curve
    ro_str:Surface
  )
.

ro_str:VlakMultiVlak a sh:NodeShape ;
  sh:xone (
    ro_str:Surface
    ro_str:MultiSurface
  )
.

ro_str:PuntLijnVlak a sh:NodeShape ;
  sh:xone (
    ro_str:Point
    ro_str:Curve
    ro_str:Surface
    ro_str:MultiPoint
    ro_str:MultiCurve
    ro_str:MultiSurface
  )
.

ro_str:LijnMultiLijn a sh:NodeShape ;
  sh:xone (
    ro_str:Curve
    ro_str:MultiCurve
  )
.

#################################################################
#   GML Geometry value shapes
#################################################################

ro_str:Point a sh:NodeShape ;
  sh:class gml:Point ;
.

ro_str:MultiPoint a sh:NodeShape ;
  sh:class gml:MultiPoint ;
.

ro_str:Surface a sh:NodeShape ;
  sh:class gml:Surface ;
.

ro_str:MultiSurface a sh:NodeShape ;
  sh:class gml:MultiSurface ;
.

ro_str:Curve a sh:NodeShape ;
  sh:class gml:Curve ;
.

ro_str:MultiCurve a sh:NodeShape ;
  sh:class gml:MultiCurve ;
.
