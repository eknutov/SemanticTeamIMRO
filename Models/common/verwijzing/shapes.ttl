ro_str:TeksttypePG_BP a sh:NodeShape ;
  sh:property [
    sh:path rdf:type ;
    sh:in (
      ro:Regels
      ro:Toelichting
      ro:BijlageBijRegels
      ro:BijlageBijToelichting
    )
  ]
.

ro_str:Teksttype_SV a sh:NodeShape ;
  sh:property [
    sh:path rdf:type ;
    sh:in (
      ro:Beleid
      ro:Toelichting
    )
  ] ;
.

ro_str:TeksttypePG_SV a sh:NodeShape ;
  sh:property [
    sh:path rdf:type ;
    sh:in (
      ro:Besluitdocument
      ro:Bijlage
      ro:Toelichting
    )
  ] ;
.

ro_str:Teksttype_BP a sh:NodeShape ;
  sh:property [
    sh:path rdf:type ;
    sh:in (
      ro:Regels
    )
  ] ;
.

ro_str:Teksttype_PSV a sh:NodeShape ;
  sh:property [
    sh:path rdf:type ;
    sh:in (
      ro:Beleid
      ro:BeleidGemandateerdAanGS
      ro:Toelichting
    ) ] ;
.

